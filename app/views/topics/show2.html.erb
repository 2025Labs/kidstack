<div class="row-fluid">
	<%= link_to image_tag("kidstack_logo.png", :alt =>"kidstack logo", :class => "topnav"), root_path %>
	<h1>
		<div class = "cattext">
			<a class="<%= @catagory.color %>" <%= link_to @catagory.headergraphic, catagory_path(@catagory.name) %></a>
		</div>
	</h1>
</div>
		
		
<div class="row-fluid">
	<div class="span2">
		<% @topics.each do |topic| %>
			<div class="row-fluid">
				
				<div class="span3">
					<% if topic == @topic %>
						<%= image_tag("pointingfigure.png") %>
					<!--<% end %>-->
				</div>
				
				
		
				<div class="span9">
					<%= link_to image_tag(topic.navgraphic, :class => "navgraph"), topic_path(topic.name) %>
				</div>
				
			</div>
		<% end %>
	</div>
	
	<div class="span10">	
		<div class = "slidearea">
			<div class="row-fluid">	
				<%= render 'contentnav'%>	
				<h3 class="<%= @catagory.color %>"><%= @topic.name %></h3>	
				<div class="row-fluid">
					<div class="span9">
						<div class="flex-video widescreen"><iframe src="<%= @topic.video %>" frameborder="0" allowfullscreen=""></iframe></div>
					</div>
					<div class="span3">
						<span class="title"><span class= "<%= @catagory.color %>" >main ideas</span></span>
						</br>
						<span class="keypoints"><%= @topic.keypoints.html_safe %></br></span>		
					</div>
				</div>
			</div>
		</div>
	</div>	
			
</div>




