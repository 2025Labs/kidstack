
	
	<div class="row-fluid">
		<div class="span8">
			<%=image_tag(@slide.image)%></br>
			
		</div>
		<div class="span4">
			<span class="title"><%= @slide.title %></br></span>
			<span class="desc"><%= @slide.desc %></br></span>
			<%= audio_tag(@slide.audio, controls: true) %>
			

			<% if @slide.prev.present? %>
				<% prevslide = @slide.prev %>
				<%= link_to image_tag("leftarrow.png", :alt => "arrow pointing left"), slide_topic_path(:id => prevslide.id),  :remote => true %>
			<% end%>

			<% unless @slide.next.nil? %>
				<% nextslide = @slide.next %>
				<%= link_to image_tag("arrow.png", :alt => "arrow pointing right"), slide_topic_path(:id => nextslide.id),  :remote => true %>
			<% end%>

		</div>
	</div>





