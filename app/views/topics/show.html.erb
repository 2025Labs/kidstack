<div class="row-fluid">
	<div class="<%= @catagory.color%>_mainbkgd">
		<a class="catagoryandtopic" <%= link_to @catagory.headergraphic, catagory_path(@catagory.name) %></a> <span class= "catagoryandtopic" >     > <%= @topic.name %></span>
		<%= link_to image_tag("navgraphics/news_icon.png", :class=>'navbuttons'), news_path  %> </span>
		<%= link_to image_tag("navgraphics/project_icon.png", :class=>'navbuttons'), projects_path  %> </span>
	</div>
</div>



<div class = "slidearea">
	<div class="row-fluid">
		<div class="span10" style="padding-right:20px; border-right: 1px solid #d9d9d9;">	
		
		
			<div class="row-fluid">	
				<div class="span3">
					<div class="<%= @catagory.color %>_bkgd">
						<span class="mainideasheader">main ideas:</span></br></br>
						<% @sections.each do |section| %>
							<a class="mainideas" <%= link_to section.main_idea, anchor: section.linking %></a>
							<br><br>
						<% end %>
					</div>				
				</div>
				
				<div class="span9">
					<% unless @catagory.video.nil? %>
					<div class="flex-video widescreen"><iframe src="<%= @topic.video %>" frameborder="0" allowfullscreen=""></iframe></div>
					<% end %>
					
					<% @sections.each do |section| %>
					<div class="row-fluid">
						<a id="<%=section.linking %>"><h4 span class= "<%= @catagory.color %>" > <%=section.header.html_safe %></span></h4></a>
						
						<% unless section.section_image == nil %>
							<div class="<%= section.image_position %>">
								<%= image_tag section.section_image %>
								<% unless section.image_caption == nil %>
									<span class="eitn_caption">
										<%= section.image_caption.html_safe %>
									</span>
								<% end %>
							</div>
						<%end %>

						<%=section.content.html_safe%>
						<br><br><br>
					</div>
					<% end %>
				</div>
			</div>
		</div>
		

		<div class="span2">
			<% @topics.each do |topic| %>
			
				<% if topic.available == "no" %>
					<%= image_tag(topic.navgraphic, :class => "navgraph")%>
				<% else %>
					<%= link_to image_tag(topic.navgraphic, :class => "navgraph"), topic_path(topic.name) %>
				<% end %>
			
			<% end %>
		</div>
	</div>
</div>


