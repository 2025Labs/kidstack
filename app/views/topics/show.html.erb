<div class="row-fluid">
	<%= link_to image_tag("kidstack_logo165x30.png", :alt =>"kidstack logo", :class => "topnav"), root_path %>
</div>
		
		
<div class="row-fluid">
	<div class="span10">	
		<div class = "slidearea">
			<h3 class="<%= @catagory.color %>"> <a class="<%= @catagory.color %>" <%= link_to @catagory.headergraphic, catagory_path(@catagory.name) %></a> > <%= @topic.name %></h3>	
			<div class="row-fluid">
				<div class="span8">
					<div class="flex-video widescreen"><iframe src="<%= @topic.video %>" frameborder="0" allowfullscreen=""></iframe></div>
				</div>
				<div class="span4">
					<span class="title"><span class= "<%= @catagory.color %>" >main ideas:</br></span></span>
				
					<span class="desc"><%= @topic.keypoints.html_safe %></br></span>		
				</div>
			</div><!-- closes row -->
		</div><!-- closes slidearea -->
	</div><!-- closes span10 -->
	
	<div class="span2">
		<% @topics.each do |topic| %>
			<%= link_to image_tag(topic.navgraphic, :class => "navgraph"), topic_path(topic.name) %>
		<% end %>
	</div>
			
</div>




