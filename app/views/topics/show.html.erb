<div class="row-fluid">
	<div class="span10">
		
		<div class="row-fluid">
		
			<%= link_to image_tag("kidstack65x65alternate4.png", :alt =>"kidstack logo", :class => "topnav"), root_path %>

			<div class="span2">
				<%= link_to image_tag(@catagory.navgraphic, :class => "topnav"), catagory_path(@catagory.name) %>
			</div>		
	
		</div>
		
		<div class="row-fluid">
			<div class="span12">
			</div>
		</div>

		<% slide = @topic.slides.first %>
		

		<div class="row-fluid">			

			<div id="show_slide">
				<%=  render( :partial => "slide", :locals => { :slide => @slide} ) %>
				</div>
			</div>

	</div>
	
		
	<div class="span2">
		<% @topics.each do |topic| %>
			<div class="row-fluid">
				<div class="span2">
					<% if topic == @topic %>
						<%= image_tag("smallsquarestroke.png") %>
					<% end %>
				</div>
				<div class="span10">
					<%= link_to image_tag(topic.navgraphic, :class => "navgraph"), topic_path(topic.name) %>
				</div>
			</div>
		<% end %>
	
		
	
</div>			
</div>




