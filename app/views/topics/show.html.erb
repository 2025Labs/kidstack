<div class = "slidearea">
	<div class="row-fluid">
		<div class="span10" style="padding-right:20px; border-right: 1px solid #d9d9d9;">	
			<div class="row-fluid">
				<div class="span12">
					<h3><span class= "<%= @catagory.color %>" ><a class="<%= @catagory.color %>" <%= link_to @catagory.headergraphic, catagory_path(@catagory.name) %></a> > <%= @topic.name %></span></h3>
				</div>
			</div>
		
			<div class="row-fluid">	
				<div class="span3">
					<div class="<%= @catagory.color %>_bkgd">
						<span class="mainideasheader">main ideas:</span></br></br>
						<% @sections.each do |section| %>
							<a class="mainideas" <%= link_to section.main_idea, anchor: section.linking %></a>
							<br><br>
						<% end %>
					</div>				
				</div>
				
				<div class="span9">
					<div class="flex-video widescreen"><iframe src="<%= @topic.video %>" frameborder="0" allowfullscreen=""></iframe></div>
				</div>
			</div>
			
			<div class="row-fluid">
				<% @sections.each do |section| %>
					
					<br>
					<a id="<%=section.linking %>"><h5 span class= "<%= @catagory.color %>" ><span class = "header_text"><%=section.header.html_safe %></span></h5></span></a>
					
					<div class = "main_text"><%=section.content.html_safe%></div>
				<% end %>
			</div>
		</div>
		

		<div class="span2">
			<% @topics.each do |topic| %>
				<%= link_to image_tag(topic.navgraphic, :class => "navgraph"), topic_path(topic.name) %>
			<% end %>
		</div>
	</div>
</div>


