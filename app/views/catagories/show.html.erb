<div class = "slidearea">
	<div class="row-fluid">
		<div class="span10" style="padding-right:20px; border-right: 1px solid #e5e5e5;">	
		
			<div class="row-fluid">
				<div class="span12">
					<h3><span class= "<%= @catagory.color %>" ><a class="<%= @catagory.color %>" <%= link_to @catagory.headergraphic, catagory_path(@catagory.name) %></a></span></h3>
				</div>
			</div>
			<div class="row-fluid">
				<div class="span4">
				
					<h6 span class= "<%= @catagory.color %>" >main ideas:</br></span></h6>
					
					<% @sections.each do |section| %>
						<a <%= link_to section.header.html_safe, anchor: section.linking %></a>
						<br>
						<br>
						
					<% end %>
				
				</div>
				
				<div class="span8">
					<div class="flex-video widescreen"><iframe src="<%= @catagory.video %>" frameborder="0" allowfullscreen=""></iframe></div>
				</div>
				
			</div>
			
			<div class="row-fluid">
				<% @sections.each do |section| %>
				
					<a id="<%=section.linking %>"><h5 span class= "<%= @catagory.color %>" ><%=section.header.html_safe %></span></h5></a>
					
					<div class = "main_text"><%=section.content.html_safe%></div>	
				<% end %>
			</div>
		</div>

	
		<div class="span2">
			<% @catagory.topics.each do |topic| %>
				<%= link_to image_tag(topic.navgraphic, :class => "navgraph"), topic_path(topic.name) %>
			<% end %>
		</div>
	</div>
</div>