
<div class="row-fluid">
	<div class="<%= @catagory.color%>_mainbkgd">
		<span class="catagoryandtopic" ><%= @catagory.headergraphic %></span>
	</div>
</div>

<div class = "slidearea">
	<div class="row-fluid">	
		<div class="span10" style="padding-right:20px; border-right: 1px solid #d9d9d9;">	
		
			<div class="row-fluid">
				<div class="span3">	
					<div class="<%= @catagory.color %>_bkgd">
						<span class="mainideasheader">main ideas:</span></br></br>
						<% @sections.each do |section| %>
							<a class="mainideas" <%= link_to section.main_idea, anchor: section.linking %></a>
							<br><br>
						<% end %>
					</div>
				</div>
				
				<div class="span9">
					<% unless @catagory.video.nil? %>
			
						<div class="flex-video widescreen"><iframe src="<%= @catagory.video %>" frameborder="0" allowfullscreen=""></iframe></div>
					<% end %>
					
					<% @sections.each do |section| %>
					<a id="<%=section.linking %>"><h4 span class= "<%= @catagory.color %>" > <%=section.header.html_safe %></span></h4></a>
						<% unless section.section_image == nil %>
							<div class="imagerightsmall">
								<%= image_tag section.section_image %>
							</div>
						<%end %>

						<%= section.content.html_safe%>	
						<br><br>
					<% end %>
				</div>
			</div>
			
		</div>

	
		<div class="span2">
			<% @catagory.topics.each do |topic| %>
				<% if topic.available == "no" %>
					<%= image_tag(topic.navgraphic, :class => "navgraph")%>
				<% else %>
					<%= link_to image_tag(topic.navgraphic, :class => "navgraph"), topic_path(topic.name) %>
				<% end %>
			<% end %>
		</div>
	</div>
</div>