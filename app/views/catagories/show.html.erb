<div class="row-fluid">
	<%= link_to image_tag("kidstack_logo.png", :alt =>"kidstack logo", :class => "topnav"), root_path %>
	<h1>
		<div class = "cattext">
			<a class="<%= @catagory.color %>" <%= link_to @catagory.headergraphic, catagory_path(@catagory.name) %></a>
		</div>
	</h1>
</div>
		
		
<div class="row-fluid">
	<div class="span2">
		
		
		<% @catagory.topics.each do |topic| %>
			<div class="row-fluid">
				<div class="span3">
				</div>
		
				<div class="span9">
					<%= link_to image_tag(topic.navgraphic, :class => "navgraph"), topic_path(topic.name) %>
				</div>

				
			</div>
		<% end %>
	</div>
	
	<div class="span10">
		<div class="row-fluid">			
			<div id="show_slide">
				<%=  render( :partial => "catslide", :locals => { :slide => @slide} ) %>
			</div>
		</div>
		
		<div class="row-fluid">	
			<hr>
			<h3>
			<div class = "cattext">
				<span class="<%= @catagory.color %>"> timeline</span>
			</div>
			</h3>
			<%= image_tag("structurestimelineforks.png")%>
		</div>
	</div>
</div>			
</div>